{
	"compilerOptions": {
		"types": ["vite/client"],
		"checkJs": true,
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"module": "esnext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["./src/styles/*"],
			"@Core/*": ["./src/scripts/Core/*"],
			"@Dom/*": ["./src/scripts/Dom/*"],
			"@Debug/*": ["./src/scripts/Debug/*"],
			"@Tools/*": ["./src/scripts/Tools/*"],
			"@utils/*": ["./src/scripts/utils/*"],
			"@Webgl/*": ["./src/scripts/Webgl/*"],
			"@scripts/*": ["./src/scripts/*"]
		}
	},
	"exclude": ["node_modules", "dist/**/*"]
}
